<?xml version="1.0" encoding="UTF-8"?>

<analysisEngineDescription xmlns="http://uima.apache.org/resourceSpecifier">
  <frameworkImplementation>org.apache.uima.java</frameworkImplementation>
  <primitive>true</primitive>  <annotatorImplementationName>Annotators.NGramAnnotator</annotatorImplementationName>
  <analysisEngineMetaData>
    <name>NGramAnnotator</name>
    <description>The system will annotate 1-,2- and 3-grams of consecutive tokens.</description>
    <version>1.0</version>
    <vendor/>
    <configurationParameters/>
    <configurationParameterSettings/>
    <typeSystemDescription>
      <types>
        <typeDescription>
          <name>Types.TestElement.QuestionAnswer</name>
          <description/>
          <supertypeName>Types.AbstractAnnotation</supertypeName>
        </typeDescription>
        <typeDescription>
          <name>Types.Processed.NGram</name>
          <description>Type representing unigram, bigram or trigram in question/answer.</description>
          <supertypeName>Types.AbstractAnnotation</supertypeName>
        <features>
            <featureDescription>
              <name>elements</name>
              <description>Tokens in NGram.</description>
              <rangeTypeName>uima.cas.FSArray</rangeTypeName>
              <elementType>Types.Processed.QAToken</elementType>
            </featureDescription>
          </features>
        </typeDescription>
      <typeDescription>
          <name>Types.AbstractAnnotation</name>
          <description>Common core attributes shared by all types.</description>
          <supertypeName>uima.tcas.Annotation</supertypeName>
        <features>
            <featureDescription>
              <name>casProcessorId</name>
              <description>componentId of creator.</description>
              <rangeTypeName>uima.cas.String</rangeTypeName>
            </featureDescription>
            <featureDescription>
              <name>confidence</name>
              <description>Confidence of the creator in the correctness of the output on a scale of 0 to 1.0.</description>
              <rangeTypeName>uima.cas.Float</rangeTypeName>
            </featureDescription>
          </features>
        </typeDescription>
      <typeDescription>
          <name>Types.Processed.QAToken</name>
          <description>Token in question/answer (delimited by whitespace and punctuation).</description>
          <supertypeName>Types.AbstractAnnotation</supertypeName>
        <features>
            <featureDescription>
              <name>sentenceIndex</name>
              <description>Unique number assigned to each sentence to allow token to determine which sentence it is part of.</description>
              <rangeTypeName>uima.cas.Integer</rangeTypeName>
            </featureDescription>
          </features>
        </typeDescription>
      </types>
    </typeSystemDescription>
    <fsIndexCollection/>
    <capabilities>
      <capability>
        <inputs>
          <type allAnnotatorFeatures="true">Types.TestElement.QuestionAnswer</type>
        </inputs>
        <outputs>
          <type allAnnotatorFeatures="true">Types.Processed.NGram</type>
        </outputs>
        <languagesSupported/>
      </capability>
    </capabilities>
  <operationalProperties>
      <modifiesCas>true</modifiesCas>
      <multipleDeploymentAllowed>true</multipleDeploymentAllowed>
      <outputsNewCASes>false</outputsNewCASes>
    </operationalProperties>
  </analysisEngineMetaData>
  <resourceManagerConfiguration/>
</analysisEngineDescription>
