<?xml version="1.0" encoding="UTF-8"?>

<typeSystemDescription xmlns="http://uima.apache.org/resourceSpecifier">
    <name>hw1-vvv-typesystem</name>
    <description/>
    <version>1.0</version>
    <vendor/>
  <types>
    <typeDescription>
      <name>Types.TestElement.Question</name>
      <description>Question being asked in sample information processing task.</description>
      <supertypeName>uima.tcas.Annotation</supertypeName>
    </typeDescription>
    <typeDescription>
      <name>Types.TestElement.Answer</name>
      <description>Proposed answer to question being asked in sample information processing task.</description>
      <supertypeName>uima.tcas.Annotation</supertypeName>
      <features>
        <featureDescription>
          <name>IsCorrect</name>
          <description>Boolean Flag indicating whether or not the proposed answer is correct.</description>
          <rangeTypeName>uima.cas.Boolean</rangeTypeName>
        </featureDescription>
      </features>
    </typeDescription>
    <typeDescription>
      <name>Types.Token.QAToken</name>
      <description>Token in question/answer (delimited by whitespace and punctuation).</description>
      <supertypeName>uima.tcas.Annotation</supertypeName>
    </typeDescription>
    <typeDescription>
      <name>Types.NGram.Unigram</name>
      <description>1-gram in question/answer.</description>
      <supertypeName>uima.tcas.Annotation</supertypeName>
    </typeDescription>
    <typeDescription>
      <name>Types.NGram.Bigram</name>
      <description>2-gram of consecutive tokens in question/answer.</description>
      <supertypeName>uima.tcas.Annotation</supertypeName>
    </typeDescription>
    <typeDescription>
      <name>Types.NGram.Trigram</name>
      <description>3-gram of consecutive tokens in question/answer.</description>
      <supertypeName>uima.tcas.Annotation</supertypeName>
    </typeDescription>
  </types>
</typeSystemDescription>
